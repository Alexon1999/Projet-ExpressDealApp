<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="ExpressDeal.Views.NouveauMaterielDansInventaire" Title="Ajouter Materiels dans inventaire"  >
    <ContentPage.Content>
        <StackLayout Spacing="3" Padding="15">

            <Label Text="Matériel : " FontSize="Medium" Margin="0,20,0,0" />
           <!--combo box-->
            <Picker x:Name="pickerMateriels" Title="selectionnez un matériel"></Picker>
            <Label Text="Quantite : "  FontSize="Medium" Margin="0,20,0,0" />
            <Entry x:Name="quantite" FontSize="Medium" Margin="0" />
            
            <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                <Button Text="Annuler" StyleClass="CancelBtn"  HorizontalOptions="FillAndExpand" Clicked="Button_Clicked_1"></Button>
                <Button Text="Enregistrer" StyleClass="OkBtn"  HorizontalOptions="FillAndExpand" Clicked="Button_Clicked"></Button>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>